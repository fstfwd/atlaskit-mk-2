{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "!note": [
        "We need to manually map local packages to their src directory because",
        "the `package.json#types` will point to `dist`. There are also some",
        "old Atlaskit packages outside this repo which have a src directory so",
        "we have to override the re-mapping to use the `package.json` again."
      ],
      "@atlaskit/emoji": ["./node_modules/@atlaskit/emoji"],
      "@atlaskit/mention": ["./node_modules/@atlaskit/mention"],
      "@atlaskit/*": ["./node_modules/@atlaskit/*/src"]
    },
    "allowJs": false,
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.collection",
      "es2015.symbol",
      "es2015.iterable",
      "es2015.promise"
    ],
    "types": ["jest", "react", "enzyme", "jest-styled-components"],
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "files": [
    "./typings/atlaskit.d.ts",
    "./typings/package.json.d.ts",
    "./typings/json.d.ts",
    "./typings/webpack.d.ts"
  ]
}
